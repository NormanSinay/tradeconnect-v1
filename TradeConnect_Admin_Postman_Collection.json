      "script": {
        "type": "text/javascript",
        "exec": [
          "if (pm.request.headers.get('Authorization')) {",
          "    // Verificar si el token est√° expirando",
          "    const token = pm.collectionVariables.get('admin_access_token');",
          "    if (token) {",
          "        try {",
          "            const payload = JSON.parse(atob(token.split('.')[1]));",
          "            const now = Math.floor(Date.now() / 1000);",
          "            if (payload.exp - now < 300) { // 5 minutos antes de expirar",
          "                console.log('Token admin expirando pronto, considera hacer refresh');",
          "            }",
          "        } catch (e) {",
          "            console.log('Error parsing token:', e);",
          "        }",
          "    }",
          "}"
        ]
      }
    },
