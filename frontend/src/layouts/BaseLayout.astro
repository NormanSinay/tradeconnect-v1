      .payment-method:hover {
        border-color: var(--primary);
        box-shadow: 0 4px 20px rgba(107, 30, 34, 0.1);
      }

      .payment-method.selected {
        border-color: var(--primary);
        background: rgba(107, 30, 34, 0.05);
      }

      .payment-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
      }

      .payment-name {
        font-weight: 600;
        color: var(--text-dark);
      }

      /* Profile Page */
      .profile-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 8rem 5% 4rem;
      }

      .profile-grid {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 3rem;
      }

      .profile-sidebar {
        background: white;
        border-radius: 24px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0,0, 0, 0.05);
        height: fit-content;
        position: sticky;
        top: 140px;
      }

      .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin: 0 auto 1.5rem;
      }

      .profile-name {
        text-align: center;
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: var(--text-dark);
      }

      .profile-email {
        text-align: center;
        color: var(--text-light);
        margin-bottom: 2rem;
      }

      .profile-menu {
        list-style: none;
      }

      .profile-menu-item {
        padding: 1rem;
        border-radius: 12px;
        margin-bottom: 0.5rem;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 600;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 0.8rem;
      }

      .profile-menu-item:hover,
      .profile-menu-item.active {
        background: rgba(107, 30, 34, 0.05);
        color: var(--primary);
      }

      .profile-content {
        background: white;
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      }

      .profile-section-title {
        font-size: 2rem;
        font-weight: 900;
        margin-bottom: 2rem;
        color: var(--text-dark);
      }

      .my-events-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 2rem;
      }

      .my-event-card {
        border: 2px solid var(--bg-light);
        border-radius: 20px;
        padding: 1.5rem;
        transition: all 0.3s;
      }

      .my-event-card:hover {
        border-color: var(--primary);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      }

      .my-event-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
      }

      .my-event-status {
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
      }

      .status-confirmed {
        background: rgba(40, 167, 69, 0.1);
        color: var(--success);
      }

      .status-upcoming {
        background: rgba(255, 193, 7, 0.1);
        color: var(--warning);
      }

      .status-completed {
        background: rgba(0, 0, 0, 0.05);
        color: var(--text-light);
      }

      .my-event-title {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--text-dark);
      }

      .my-event-date {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 1rem;
      }

      .my-event-actions {
        display: flex;
        gap: 0.8rem;
      }

      .btn-small {
        padding: 0.6rem 1.2rem;
        border-radius: 10px;
        font-weight: 600;
        font-size: 0.85rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s;
      }

      .btn-qr {
        background: var(--primary);
        color: white;
      }

      .btn-qr:hover {
        background: var(--primary-light);
      }

      .btn-certificate {
        background: var(--bg-light);
        color: var(--text-dark);
      }

      .btn-certificate:hover {
        background: var(--primary);
        color: white;
      }

      /* Certificate Page */
      .certificate-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 8rem 5% 4rem;
      }

      .certificate-card {
        background: white;
        border-radius: 32px;
        padding: 4rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 8px solid;
        border-image: linear-gradient(135deg, var(--primary), var(--accent)) 1;
        text-align: center;
        position: relative;
      }

      .certificate-logo {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #d4d4d4 0%, #ffffff 50%, #e8e8e8 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        margin: 0 auto 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      }

      .certificate-title {
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .certificate-subtitle {
        font-size: 1.2rem;
        color: var(--text-light);
        margin-bottom: 3rem;
      }

      .certificate-recipient {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 2rem;
      }

      .certificate-event {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 2rem;
      }

      .certificate-details {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-bottom: 3rem;
        flex-wrap: wrap;
      }

      .certificate-detail-item {
        text-align: center;
      }

      .certificate-detail-label {
        font-size: 0.9rem;
        color: var(--text-light);
        margin-bottom: 0.5rem;
      }

      .certificate-detail-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-dark);
      }

      .certificate-verification {
        background: var(--bg-light);
        padding: 1.5rem;
        border-radius: 16px;
        margin-top: 2rem;
      }

      .verification-title {
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-dark);
      }

      .blockchain-hash {
        font-family: 'Courier New', monospace;
        font-size: 0.85rem;
        color: var(--text-light);
        word-break: break-all;
        background: white;
        padding: 1rem;
        border-radius: 8px;
      }

      .certificate-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 3rem;
      }

      /* QR Code Page */
      .qr-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 8rem 5% 4rem;
      }

      .qr-card {
        background: white;
        border-radius: 32px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .qr-title {
        font-size: 2rem;
        font-weight: 900;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .qr-event-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 2rem;
      }

      .qr-code-display {
        width: 300px;
        height: 300px;
        background: white;
        border: 4px solid var(--primary);
        border-radius: 20px;
        margin: 0 auto 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 8rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      }

      .qr-info {
        background: var(--bg-light);
        padding: 2rem;
        border-radius: 16px;
        margin-bottom: 2rem;
      }

      .qr-info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
        font-size: 1rem;
      }

      .qr-warning {
        background: rgba(255, 193, 7, 0.1);
        border: 2px solid var(--warning);
        padding: 1.5rem;
        border-radius: 16px;
        margin-top: 2rem;
        text-align: left;
      }

      .qr-warning-title {
        font-weight: 700;
        color: var(--warning);
        margin-bottom: 0.5rem;
      }

      .qr-warning-text {
        color: var(--text-dark);
        font-size: 0.95rem;
      }

      /* Footer */
      footer {
        background: var(--secondary);
        color: white;
        padding: 5rem 5% 2rem;
      }

      .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 4rem;
        margin-bottom: 3rem;
      }

      .footer-brand {
        max-width: 350px;
      }

      .footer-logo {
        font-size: 1.8rem;
        font-weight: 800;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .footer-brand p {
        opacity: 0.8;
        line-height: 1.8;
        margin-bottom: 1.5rem;
      }

      .footer-section h4 {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
      }

      .footer-section ul {
        list-style: none;
      }

      .footer-section ul li {
        margin-bottom: 1rem;
      }

      .footer-section a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: all 0.3s;
        cursor: pointer;
      }

      .footer-section a:hover {
        color: white;
        transform: translateX(5px);
      }

      .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: rgba(255, 255, 255, 0.7);
      }

      /* Responsive */
      @media (max-width: 992px) {
        .hero-container,
        .event-detail-container,
        .cart-content,
        .checkout-content {
          grid-template-columns: 1fr;
        }

        .bento-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .stats-container {
          grid-template-columns: repeat(2, 1fr);
        }

        .profile-grid {
          grid-template-columns: 1fr;
        }

        .my-events-grid {
          grid-template-columns: 1fr;
        }

        .footer-container {
          grid-template-columns: 1fr 1fr;
        }
      }

      @media (max-width: 768px) {
        nav {
          padding: 1rem;
        }

        .nav-links {
          display: none;
        }

        .ai-search {
          width: 150px;
        }

        .hero-content h1 {
          font-size: 2.5rem;
        }

        .bento-grid {
          grid-template-columns: 1fr;
        }

        .stats-container {
          grid-template-columns: 1fr;
        }

        .footer-container {
          grid-template-columns: 1fr;
        }

        .cart-item {
          flex-direction: column;
        }

        .checkout-steps {
          flex-direction: column;
