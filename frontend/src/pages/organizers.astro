<style>
  .organizers-page {
    min-height: 100vh;
  }

  .hero-section {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: white;
    padding: var(--spacing-2xl) 0;
    text-align: center;
  }

  .hero-section h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    font-family: var(--font-secondary);
  }

  .hero-description {
    font-size: 1.25rem;
    max-width: 800px;
    margin: 0 auto;
    opacity: 0.9;
  }

  .benefits-section {
    padding: var(--spacing-2xl) 0;
    background-color: var(--background);
  }

  .benefits-section h2 {
    text-align: center;
    color: var(--text-primary);
    font-family: var(--font-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
  }

  .benefit-card {
    background: white;
    padding: var(--spacing-xl);
    border-radius: var(--border-radius-lg);
    text-align: center;
    box-shadow: var(--shadow-md);
    border-left: 4px solid var(--primary);
  }

  .benefit-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .benefit-card h3 {
    color: var(--primary);
    font-family: var(--font-secondary);
    margin-bottom: var(--spacing-md);
  }

  .benefit-card p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .features-section {
    padding: var(--spacing-2xl) 0;
    background: white;
  }

  .features-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .features-text h2 {
    color: var(--text-primary);
    font-family: var(--font-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .feature-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .feature-item {
    padding: var(--spacing-md);
    background: var(--surface);
    border-radius: var(--border-radius-md);
    border-left: 3px solid var(--primary);
  }

  .feature-item h4 {
    color: var(--primary);
    margin-bottom: var(--spacing-sm);
    font-size: 1.1rem;
  }

  .feature-item p {
    color: var(--text-secondary);
    margin: 0;
    font-size: 0.9rem;
  }

  .mockup-dashboard {
    background: var(--surface);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-lg);
    box-shadow: var(--shadow-lg);
  }

  .mockup-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--primary-light);
  }

  .mockup-title {
    font-weight: 600;
    color: var(--primary);
  }

  .mockup-stats {
    display: flex;
    gap: var(--spacing-md);
  }

  .stat {
    text-align: center;
    font-weight: 600;
    color: var(--text-primary);
  }

  .stat span {
    display: block;
    font-size: 0.8rem;
    color: var(--text-secondary);
    font-weight: 400;
  }

  .chart-placeholder {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--text-secondary);
  }

  .chart-placeholder span {
    font-size: 3rem;
    display: block;
    margin-bottom: var(--spacing-sm);
  }

  .pricing-section {
    padding: var(--spacing-2xl) 0;
    background-color: var(--background);
  }

  .pricing-section h2 {
    text-align: center;
    color: var(--text-primary);
    font-family: var(--font-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing-card {
    background: white;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .pricing-card.featured {
    transform: scale(1.05);
    box-shadow: var(--shadow-xl);
    border: 2px solid var(--primary);
  }

  .pricing-badge {
    background: var(--primary);
    color: white;
    padding: var(--spacing-xs) var(--spacing-md);
    position: absolute;
    top: 0;
    right: 0;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .pricing-header {
    padding: var(--spacing-xl);
