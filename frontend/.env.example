# TradeConnect Frontend Environment Variables
# Copy this file to .env.local and configure with your actual values

# API Backend URL
# Development: http://localhost:3000/api/v1
# Production: https://api.tradeconnect.gt/api/v1
PUBLIC_API_URL=http://localhost:3000/api/v1

# App Configuration
PUBLIC_APP_NAME=TradeConnect
PUBLIC_APP_VERSION=1.0.0
PUBLIC_SITE_URL=http://localhost:4321

# Feature Flags
PUBLIC_ENABLE_ANALYTICS=false
PUBLIC_ENABLE_DEBUG_MODE=true

# Optional: External Services
# PUBLIC_GOOGLE_ANALYTICS_ID=
# PUBLIC_SENTRY_DSN=
